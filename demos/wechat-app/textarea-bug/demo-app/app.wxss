.post-item {
  margin: 20rpx 0;
  padding: 10rpx 30rpx;
  background-color: #fff;
  box-shadow: 1px 1px 1px #bbb;
}

.post-item__userinfo {
  display: flex;
  margin: 0 auto;
}

.post-item__avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.post-item__nickname {
  color: #555;
  font-size: 32rpx;
  margin: 15rpx 0 0 20rpx;
}

.post-item__img {
  margin: 10rpx 0 0;
}

.post-item__img image {
  width: 200px;
  height: 200px;
}

.post-item__content {
  margin: 10rpx 0 0;
  color: #222;
  font-size: 34rpx;
  line-height: 40rpx;
}

.post-item__handle {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-around;
}

.post-item__action {
  padding: 10rpx 0 5rpx;
  flex: 1;
  font-size: 25rpx;
  text-align: center;
  color: #999;
}

.post-item__action image {
  width: 40rpx;
  height: 40rpx;
}